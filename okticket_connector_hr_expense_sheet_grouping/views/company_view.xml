<odoo>
    <data>

        <record model="ir.ui.view" id="okticket_view_company_form">
            <field name="name">okticket.view.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="connector_okticket.okticket_view_company_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <page name="okticket_conn_conf" position="inside">
                    <group>
                        <field name="month_day_limit"
                               attrs="{'invisible': [('expense_sheet_grouping_time', '!=', 'biweekly')],'required': [('expense_sheet_grouping_time', '=', 'biweekly')]}"/>
                    </group>
                </page>
            </field>
        </record>

    </data>
</odoo>
