<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cost_center_creation_from_project_view" model="ir.ui.view">
            <field name="name">cost.center.creation.from.project.view</field>
            <field name="model">project.cost.center.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Cost Center from Project">
                    <p class="oe_grey">
                        Se crearán los centros de coste a partir
                        de los proyectos indicados
                        ¿Desea continuar?
                    </p>
                    <footer>
                        <button string="Confirm" name="cost_center_from_project_confirm" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_confirm_cost_center_creation_project"
            multi="True"
            key2="client_action_multi" name="Confirm Cost Center Creation from Project"
            res_model="project.cost.center.wizard" src_model="project.project"
            view_mode="form" target="new" view_type="form" />

    </data>
</odoo>
