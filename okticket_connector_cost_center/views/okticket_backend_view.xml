<odoo>
    <data>

        <record id="view_okticket_backend_form" model="ir.ui.view">
            <field name="name">okticket.backend.form</field>
            <field name="model">okticket.backend</field>
            <field name="inherit_id" ref="okticket_connector.view_okticket_backend_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[@name='bindings']" position="inside">
                    <page string="Analytic Account Bindings" name="analytic_account_bindings">
                        <button name="%(action_open_okticket_analytic_account_binding)d"
                                string="â‡’ See Analytic Account Bindings"
                                type="action"
                                class="oe_link"/>
                        <field name="okticket_analytic_account_ids" invisible="1">
                            <tree editable="top" limit="80">
                                <field name="id"/>
                                <field name="sync_date"/>
                                <field name="odoo_id"/>
                                <field name="external_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
